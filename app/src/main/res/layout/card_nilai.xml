<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_nilai"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="5dp"
            android:id="@+id/round"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/background_round"
            android:backgroundTint="@color/colorPrimary">
            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="35sp"
                android:text="80"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_toRightOf="@+id/round"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/nama_tugas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tugas: Aljabar"/>
            <TextView
                android:id="@+id/mapel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama_tugas"
                android:text="Mapel: Matematika"/>
            <TextView
                android:id="@+id/mulai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapel"
                android:text="Tanggal: 3/3/2017"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>